    <files>
        <filename plugin="db8form">db8form.php</filename>
        <folder>language</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="userGroups"
                        type="usergrouplist"
                        label="PLG_CONTENT_DB8FORM_USERGROUPS"
                        multiple="true"
                        layout="joomla.form.field.list-fancy-select"
